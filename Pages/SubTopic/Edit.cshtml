@page
@model SubjectManagementWebApplication.Pages.Topic.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SubTopics</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubTopics.SubTopicID" />
            <div class="form-group">
                <label asp-for="SubTopics.TopicID" class="control-label"></label>
                <select asp-for="SubTopics.TopicID" class="form-control" asp-items="ViewBag.TopicID"></select>
                <span asp-validation-for="SubTopics.TopicID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SubTopics.SubTopicName" class="control-label"></label>
                <input asp-for="SubTopics.SubTopicName" class="form-control" />
                <span asp-validation-for="SubTopics.SubTopicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
